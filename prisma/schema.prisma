model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  githubId      String?  @unique
  image         String?
  role          Role      @relation(fields: [roleId], references: [id])
  roleId        Int
}

model Role {
  id    Int      @id @default(autoincrement())
  name  String
  users User[]
}


model Data {
  id    Int      @id @default(autoincrement())
  json  String
}
